<% provide(:title, 'New Lessons') %>
<h1>新規学習コース作成</h1>
<div class="col-md-6 col-md-offset-3">
  <h5>学習コース名</h5>
  <%= form_with(model: @lesson, url: lessons_path, local: true) do |f| %>
    <%= f.text_field :lesson_name, class: 'form-control' %>
    <h5>タスク名</h5>
    <div class="tasks">
      <%= f.fields_for :tasks do |t| %>
        <%= render "task_fields", f: t %>
      <% end %>
    </div>
    <div class="col-10 mx-auto mt-2">
      <%= link_to_add_association "追加ボタン", f, :tasks, class: "btn btn-success" %>
    </div>
    <div class="actions">
      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" %>
    </div>
  <% end %>
</div>