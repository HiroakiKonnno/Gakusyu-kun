<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">x</span>
      </button>
      <h1 class="modal-title">ユーザー編集</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model:@user, url: update_learner_info_user_path(@user), local: true, method: :patch) do |f| %>

            <%= f.label :name, class: "label-basic-info" %>
            <%= f.text_field :name,value: @user.name, class: "form-control" %>

            <%= f.label :email, class: "label-basic-info" %>
            <%= f.email_field :email,value: @user.email, class: "form-control" %>

            <%= f.label :password, class: "label-basic-info" %>
            <%= f.password_field :password, class: "form-control" %>

            <%= f.label :password_confirmation, "Confirmation", class: "label-basic-info" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>

            <div class="center">
              <%= f.submit "更新", class: "btn btn-primary btn-label-basic-info" %>
              <button type="button" class="btn btn-default btn-label-basic-info" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>